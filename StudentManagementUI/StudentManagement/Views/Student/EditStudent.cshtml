@model StudentManagement.Models.Student

@{
    ViewData["Title"] = "EditStudent";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Student</title>
</head>
<body>

    <h4>Student</h4>
    <hr />
    <h1 class="text-center" style="margin:40px">Student Information</h1>

        <div class="form-group">
            <label >StudentID</label>
            <input type="text" readonly class="form-control">

        </div>
        <div class="form-group">
            <label>Full Name</label>
            <input type="text" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Class</label>
            <input type="text" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Gender</label><br />
            <select name="sex" id="sex" runat="server">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
        </div>
        <div class="form-group">
            <label>GPA</label>
            <input type="number" step="0.01" min="0" max="4" class="form-control" />
        </div>
        <button type="reset" class="btn btn-light">Reset</button>
        <button type="submit" class="btn btn-primary">Save</button>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
